<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <menu id="header_menu">
    <section>
      <section>
        <submenu>
          <attribute name="label" translatable="yes">_Input</attribute>
          <item>
            <attribute name="label" translatable="yes">_Emulate touch</attribute>
            <attribute name="action">app.toggle_emulate_touch</attribute>
          </item>
        </submenu>
      </section>
      <item>
        <attribute name="label" translatable="yes">_About Mutter SDK</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
  <object class="GtkApplicationWindow" id="window">
    <child type="titlebar">
      <object class="GtkHeaderBar" id="headerbar">
        <property name="title-widget">
          <object class="GtkLabel">
            <property name="label" translatable="yes">Mutter SDK</property>
            <property name="single-line-mode">True</property>
            <property name="ellipsize">end</property>
            <property name="width-chars">5</property>
            <style>
              <class name="title"/>
            </style>
          </object>
        </property>
        <child type="end">
          <object class="GtkMenuButton" id="gear_menu_button">
            <property name="valign">center</property>
            <property name="menu-model">header_menu</property>
            <property name="icon-name">open-menu-symbolic</property>
            <accessibility>
              <property name="label" translatable="yes">Primary menu</property>
            </accessibility>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
